# Editor configuration, see https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
max_line_length = 160
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{*.ad,*.adoc,*.asciidoc,.asciidoctorconfig}]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
