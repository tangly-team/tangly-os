{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "behavior driven design BDD consolidated report schema",
  "definitions": {
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "entity": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "required": [
        "id",
        "name"
      ]
    },
    "ands": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "block": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "$ref": "definitions.json#/ands",
          "required": [
            "type"
          ]
        }
      }
    },
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        },
        "$ref": "definitions.json#/entity",
        "$ref": "definitions.json#/tags",
        "required": [
          "package"
        ],
        "stories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "$ref": "definitions.json#/entity",
              "$ref": "definitions.json#/tags",
              "scenarios": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "method": {
                      "type": "string"
                    },
                    "given": {
                      "ref": "definitions.json#/block"
                    },
                    "when": {
                      "ref": "definitions.json#/block"
                    },
                    "then:": {
                      "ref": "definitions.json#/block"
                    },
                    "required" : ["name", "method", "given", "when", "then"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
