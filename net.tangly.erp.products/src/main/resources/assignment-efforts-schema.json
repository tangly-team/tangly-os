{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "product archive schema",
    "description": "schema for assignment work effort reports",
    "definitions": {
        "effort": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "duration": {
                    "type": "integer",
                    "minimum": 1
                },
                "text": {
                    "type": "string"
                },
                "minutes": {
                    "type": "string"
                },
                "required": ["date", "duration", "text"]
            }
        }
    },
    "properties": {
        "assignmentOid": {
            "type": "integer",
            "minimum": 1
        },
        "contractId": {
            "type": "string"
        },
        "collaborator": {
            "type": "string"
        },
        "efforts": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/effort"
            }
        }
    }
}
